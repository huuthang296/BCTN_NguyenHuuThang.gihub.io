@using MiniShopWebNHT.Models
@model List<KhachHang>

@{
                /**/

                Layout = null;
}
<link href="~/Assets/css/css/Giohang.css" rel="stylesheet" />
<!-- Shopping Cart Section Begin -->
<hr />
<p>Thanh Toán</p>
@foreach (var dg in Model)
{
    <section class="checkout-section spad">
        <div class="container">
            <form action="#" class="checkout-form">
                <div class="row">
                    <div class="col-lg-6">

                        <h4>Thông Tin Đơn Hàng</h4>
                        <div class="row">
                            <div class="col-lg-6">
                                <label for="fir">Tên Khách Hàng<span>*</span></label>
                                <input type="text" name="tennguoinhan" id="tennguoinhan" value="@dg.HoTenKH" required>
                            </div>

                            <div class="col-lg-6">
                                <label for="fir">Địa Chỉ</label>
                                <input type="text" name="diachinhanhang" id="diachinhanhang" value="@dg.DiaChiKH" required>
                            </div>


                            <div class="col-lg-6">
                                <label for="zip">Giới Tính</label>
                                <input type="text" id="zip" value="@dg.GioiTinh" required>
                            </div>

                            <div class="col-lg-6">
                                <label for="email">Email<span>*</span></label>
                                <input type="email" name="email" id="email" value="@dg.Email">
                            </div>
                            <div class="col-lg-6">
                                <label for="phone">Số Điện Thoại<span>*</span></label>
                                <input type="tel" name="dienthoainhanhang" id="dienthoainhanhang" value="@dg.SoDienThoaiKH" pattern="[0-9]{10}" required>
                            </div>
                            <div class="col-lg-6">
                                <label for="cun-name">Ngày nhận hàng:@string.Format("{0:dd/MM/yyyy}", @Session["NgayNhanHang"]) </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">

                        <div class="place-order">
                            <h4>Đơn Hàng Của Bạn</h4>
                            <div class="order-total">
                                <ul class="order-table">
                                    <li class="TongTien" style="list-style:none; font-size:20;font-weight:700;">
                                        Tổng tiền <h2>
                                            <span id="tongtien" style="
    color: #e7ab3c;
    font-weight: 700;
    margin-bottom: 30px;">@Session["TongTien"]VNĐ</span>
</h2>
</li>
</ul>
@*<div class="col-lg-4 offset-lg-4">
        <div class="proceed-checkout">
            <ul>
                <li class="TongTien">Tổng Tiền <h2><span id="tongtien">@Session["TongTien"]  VNĐ</span></h2></li>

            </ul>

        </div>
    </div>*@
<div class="payment-check">
    <div class="pc-item">
        <label for="pc-check">
            Cheque Payment
            <input type="checkbox" id="pc-check">
            <span class="checkmark"></span>
        </label>
    </div>
    <div class="pc-item">
        <label for="pc-paypal">
            Paypal
            <input type="checkbox" id="pc-paypal">
            <span class="checkmark"></span>
        </label>
    </div>
</div>
<div class="order-btn">
    <button onclick="DatHang();" type="submit" class="site-btn place-btn">THANH TOÁN</button>
</div>
</div>
</div>

</div>
</div>
</form>
</div>
</section>
}
<!-- Shopping Cart Section End -->

<script type="text/javascript">
    var day = new Date();
    var d = day.getDate() + 2;
    var m = day.getMonth() + 1;
    var y = day.getFullYear();
    document.getElementById('ngaynhanhang').innerHTML = d + "/" + m + "/" + y;
</script>

<script type="text/javascript">
    function onlyNumbers(evt) {
        var e = event || evt;
        var charCode = e.which || e.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

</script>